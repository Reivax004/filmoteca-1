{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Filmoteca{% endblock %}

{% block content %}
<div class="container my-5">
    <section class="text-center mb-5">
        <h1 class="display-4 fw-bold text-success">
            <i class="fas fa-popcorn"></i> Bienvenue sur Filmoteca
        </h1>
        <p class="lead text-secondary">
            Gérez votre collection de films avec une interface simple et intuitive.
        </p>
        <a href="/film/list" class="btn btn-info btn-lg">
            <i class="fas fa-list"></i> Liste des films
        </a>
    </section>

    <section class="row text-center mb-5">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-danger">
                        <i class="fas fa-plus"></i> Ajouter un film
                    </h5>
                    <p class="card-text">
                        Ajoutez facilement de nouveaux films à votre collection.
                    </p>
                    <a href="/film/create" class="btn btn-outline-success">
                        <i class="fas fa-plus-circle"></i> Ajouter
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">
                        <i class="fas fa-list-ul"></i> Liste des films
                    </h5>
                    <p class="card-text">
                        Consultez et explorez tous les films ajoutés à votre collection.
                    </p>
                    <a href="/film/list" class="btn btn-outline-warning">
                        <i class="fas fa-arrow-right"></i> Accéder
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="text-center py-5">
        <h2 class="fw-bold text-success">
            <i class="fas fa-note"></i> Noter nos films !
        </h2>
        <p class="text-muted">Ajoutez vos premières notes.</p>
        <a href="/film/note" class="btn btn-danger btn-lg">
            <i class="fa-regular fa-circle-check"></i> Ajouter une note.
        </a>
    </section>

    <section class="row text-center mb-5">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-warning">
                        <i class="fa-solid fa-screwdriver-wrench"></i> Gestion des films
                    </h5>
                    <p class="card-text">
                        Gérez vos films avec des outils simples et efficaces.
                    </p>
                    <a href="/film/list" class="btn btn-outline-info">
                        Start
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
